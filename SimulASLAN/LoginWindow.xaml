<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drone Control Access" Height="500" Width="450" 
        WindowStartupLocation="CenterScreen" Background="#222" ResizeMode="NoResize">
    <Grid Margin="30">

        <!-- Language Picker (Top Right) -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button x:Name="btnEn" Content="EN" Width="30" Height="20" Background="Transparent" Foreground="White" BorderBrush="Gray" Click="BtnLang_Click" Tag="EN" Margin="0,0,5,0" Cursor="Hand"/>
            <Button x:Name="btnTr" Content="TR" Width="30" Height="20" Background="Transparent" Foreground="White" BorderBrush="Gray" Click="BtnLang_Click" Tag="TR" Cursor="Hand" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Center">
            <!-- Added x:Name identifiers to TextBlocks so we can change them in C# -->
            <TextBlock x:Name="lblTitle" Text="UÇUŞ YETKİLENDİRME" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock x:Name="lblUser" Text="Kullanıcı Adı" Foreground="Gray"/>
            <TextBox x:Name="txtUser" Height="35" Margin="0,5,0,15" Background="#333" Foreground="White" BorderBrush="Gray" Text="admin" VerticalContentAlignment="Center" Padding="5,0"/>

            <TextBlock x:Name="lblPass" Text="Şifre" Foreground="Gray"/>
            <PasswordBox x:Name="txtPass" Height="35" Margin="0,5,0,25" Background="#333" Foreground="White" BorderBrush="Gray" Password="password" VerticalContentAlignment="Center" Padding="5,0"/>

            <Separator Opacity="0.2" Margin="0,0,0,15"/>

            <TextBlock x:Name="lblCoords" Text="Hedef Koordinatlar (Enlem, Boylam)" Foreground="#00CCFF" FontWeight="Bold"/>
            <TextBox x:Name="txtCoords" Height="35" Margin="0,5,0,15" Background="#333" Foreground="White" BorderBrush="#00CCFF" Text="41.145253, 29.3678" VerticalContentAlignment="Center" Padding="5,0"/>

            <TextBlock x:Name="lblQuality" Text="Harita Kalitesi (1-5)" Foreground="#00CCFF" FontWeight="Bold" Margin="0,10,0,5"/>
            <Slider x:Name="sliderQuality" Minimum="1" Maximum="5" Value="4" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" Margin="0,0,0,5"/>
            <TextBlock x:Name="lblQualityHint" Text="(Yüksek = Daha İyi Detay, Yavaş İndirme)" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <Button x:Name="btnLogin" Content="SİMÜLASYONU BAŞLAT" Height="50" Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="14" Click="BtnLogin_Click" Cursor="Hand"/>
            <TextBlock x:Name="txtError" Foreground="Red" HorizontalAlignment="Center" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</Window>