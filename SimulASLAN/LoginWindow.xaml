<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimulASLAN Giriş Noktası" Height="700" Width="450"
        WindowStartupLocation="CenterScreen" Background="Black" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" KeyDown="Window_KeyDown">
    <Grid Margin="30">

        <Border x:Name="TerminalIntro" Background="Black" Padding="20" Panel.ZIndex="10">
            <TextBlock x:Name="TerminalText" FontFamily="Consolas" FontSize="14" Foreground="#00FF66" TextWrapping="Wrap"/>
        </Border>

        <Grid x:Name="LoginRoot" Visibility="Collapsed">
            <!-- Language Picker (Top Right) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                <Button x:Name="btnEn" Content="EN" Width="30" Height="20" Background="Transparent" Foreground="White" BorderBrush="Gray" Click="BtnLang_Click" Tag="EN" Margin="0,0,5,0" Cursor="Hand"/>
                <Button x:Name="btnTr" Content="TR" Width="30" Height="20" Background="Transparent" Foreground="White" BorderBrush="Gray" Click="BtnLang_Click" Tag="TR" Cursor="Hand" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center">

                <TextBlock x:Name="lblTitle" Text="UÇUŞ YETKİLENDİRME" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock x:Name="lblUser" Text="Kullanıcı Adı" Foreground="Gray"/>
                <TextBox x:Name="txtUser" Height="35" Margin="0,5,0,15" Background="#333" Foreground="White" BorderBrush="Gray" Text="admin" VerticalContentAlignment="Center" Padding="5,0" CaretBrush="#00FF66"/>

                <TextBlock x:Name="lblPass" Text="Şifre" Foreground="Gray"/>
                <PasswordBox x:Name="txtPass" Height="35" Margin="0,5,0,25" Background="#333" Foreground="White" BorderBrush="Gray" Password="password" VerticalContentAlignment="Center" Padding="5,0" CaretBrush="#00FF66"/>

                <Separator Opacity="0.2" Margin="0,0,0,15"/>

                <TextBlock x:Name="lblCoords" Text="Hedef Koordinatlar (Enlem, Boylam)" Foreground="#00CCFF" FontWeight="Bold"/>
                <TextBox x:Name="txtCoords" Height="35" Margin="0,5,0,15" Background="#333" Foreground="White" BorderBrush="#00CCFF" Text="41.145253, 29.3678" VerticalContentAlignment="Center" Padding="5,0" CaretBrush="#00FF66"/>

                <TextBlock x:Name="lblQuality" Text="Harita Kalitesi (1-5)" Foreground="#00CCFF" FontWeight="Bold" Margin="0,10,0,5"/>
                <Slider x:Name="sliderQuality" Minimum="1" Maximum="5" Value="4" TickFrequency="1" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" Margin="0,0,0,5"/>
                <TextBlock x:Name="lblQualityHint" Text="(Yüksek = Daha İyi Detay, Yavaş İndirme)" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <TextBlock x:Name="lblCoverage" Text="Harita Kapsamı (metre)" Foreground="#00CCFF" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <Slider x:Name="sliderCoverage" Minimum="300" Maximum="2000" Value="833" TickFrequency="100" IsSnapToTickEnabled="True" AutoToolTipPlacement="TopLeft" Width="280"/>
                    <TextBlock x:Name="lblCoverageValue" Foreground="White" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="lblCoverageHint" Text="(Bağlantı açıldığında indirilecek kapsama alanı)" Foreground="Gray" FontSize="10" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- NEW GOOGLE MAPS SWITCH -->
                <CheckBox x:Name="chkUseGoogleMaps"
                          Content="Google Maps ile harita aç"
                          IsChecked="True"
                          Foreground="White"
                          Margin="0,0,0,25"/>

                <!-- NEW GOOGLE MAPS ZOOM SLIDER -->
                <TextBlock x:Name="lblZoom" Text="Google Maps Zoom (1-20)"
                           Foreground="#00CCFF" FontWeight="Bold" Margin="0,0,0,5" Visibility="Collapsed"/>

                <Slider x:Name="sliderZoom" Minimum="1" Maximum="20" Value="19"
                        TickFrequency="1" IsSnapToTickEnabled="True"
                        AutoToolTipPlacement="TopLeft" Margin="0,0,0,5" Visibility="Collapsed"/>

                <TextBlock x:Name="lblZoomHint"
                           Text="(Varsayılan Google Maps yakınlaştırma seviyesi)"
                           Foreground="Gray" FontSize="10" HorizontalAlignment="Center"
                           Margin="0,0,0,25" Visibility="Collapsed"/>

                <Button x:Name="btnLogin" Content="SİMÜLASYONU BAŞLAT" Height="50" Background="#007ACC" Foreground="White" FontWeight="Bold" FontSize="14" Click="BtnLogin_Click" Cursor="Hand"/>
                <TextBlock x:Name="txtError" Foreground="Red" HorizontalAlignment="Center" Margin="0,15,0,0"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
