<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helix="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
        Title="Istanbul Drone Simulator" Height="720" Width="1280" Background="#111">

    <DockPanel>
        <TabControl x:Name="MainTabs" DockPanel.Dock="Top" Background="#111" Foreground="White" BorderBrush="#222">
            <!-- Simulation Tab -->
            <TabItem Header="Simulation">
                <Grid>
                    <helix:HelixViewport3D x:Name="viewPort"
                                           ShowCoordinateSystem="True"
                                           ZoomExtentsWhenLoaded="False"
                                           IsMoveEnabled="False"
                                           IsPanEnabled="False"
                                           IsRotationEnabled="False">

                        <helix:HelixViewport3D.Camera>
                            <PerspectiveCamera x:Name="cam" Position="0, -30, 30" LookDirection="0, 30, -30" UpDirection="0, 0, 1"/>
                        </helix:HelixViewport3D.Camera>

                        <helix:SunLight/>

                        <ModelVisual3D x:Name="droneObject">
                            <ModelVisual3D.Transform>
                                <Transform3DGroup>
                                    <RotateTransform3D>
                                        <RotateTransform3D.Rotation>
                                            <AxisAngleRotation3D x:Name="rotPitch" Axis="1,0,0"/>
                                        </RotateTransform3D.Rotation>
                                    </RotateTransform3D>
                                    <RotateTransform3D>
                                        <RotateTransform3D.Rotation>
                                            <AxisAngleRotation3D x:Name="rotRoll" Axis="0,1,0"/>
                                        </RotateTransform3D.Rotation>
                                    </RotateTransform3D>
                                    <RotateTransform3D>
                                        <RotateTransform3D.Rotation>
                                            <AxisAngleRotation3D x:Name="rotYaw" Axis="0,0,1"/>
                                        </RotateTransform3D.Rotation>
                                    </RotateTransform3D>
                                    <TranslateTransform3D x:Name="transPos"/>
                                </Transform3DGroup>
                            </ModelVisual3D.Transform>
                        </ModelVisual3D>

                    </helix:HelixViewport3D>

                    <!-- HUD Overlay -->
                    <Border Background="#88000000" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Padding="15" CornerRadius="8" IsHitTestVisible="False">
                        <StackPanel>
                            <TextBlock x:Name="lblFlightData" Text="FLIGHT DATA" FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Foreground="White"/>
                            <TextBlock x:Name="txtCoords" Text="Location: ..." Foreground="Cyan" FontSize="11" Margin="0,0,0,5"/>

                            <!-- Controls Help Text -->
                            <TextBlock x:Name="lblCtrlThrottle" Text="SPACE: Throttle | Z: Turbo Boost" Foreground="White"/>
                            <TextBlock x:Name="lblCtrlImpulse" Text="B: SUPER IMPULSE (10x Kick)" Foreground="White"/>
                            <TextBlock x:Name="lblCtrlPitch" Text="W/S: Pitch | A/D: Roll" Foreground="White"/>
                            <TextBlock x:Name="lblCtrlYaw" Text="Q/E: Yaw" Foreground="White"/>
                            <TextBlock x:Name="lblCtrlCam" Text="ARROWS: Move Camera" Foreground="#AAA" Margin="0,5,0,0"/>

                            <Separator Opacity="0.5" Margin="5"/>
                            <TextBlock x:Name="txtTelemetry" FontFamily="Consolas" Foreground="LimeGreen" Text="Initializing..."/>
                        </StackPanel>
                    </Border>

                    <!-- Mission Control Panel -->
                    <Border Background="#AA000000" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20" Padding="12" CornerRadius="8">
                        <StackPanel>
                            <TextBlock Text="Mission Control" FontWeight="Bold" Foreground="White" Margin="0,0,0,8"/>
                            <TextBlock Text="Next Action" Foreground="Gray" FontSize="11"/>
                            <TextBlock x:Name="txtNextAction" Text="Idle" Foreground="LightGreen" Margin="0,0,0,8"/>
                            <Button x:Name="btnStartMission" Content="Start Mission" Click="BtnStartMission_Click" Margin="0,0,0,5" Padding="6"/>
                            <Button x:Name="btnStopMission" Content="Stop Mission" Click="BtnStopMission_Click" Margin="0,0,0,5" Padding="6"/>
                            <Button x:Name="btnFailsafe" Content="Failsafe" Click="BtnFailsafe_Click" Background="#550000" Foreground="White" Padding="6"/>
                        </StackPanel>
                    </Border>

                    <!-- 2D Drone Shadow (orientation preview) -->
                    <Border Background="#80000000" CornerRadius="8" Padding="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Width="170" Height="170">
                        <Grid>
                            <TextBlock Text="Drone Shadow" Foreground="#CCCCCC" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,6"/>
                            <Canvas x:Name="DroneShadowCanvas" Width="130" Height="130" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Ellipse x:Name="ShadowFootprint" Width="110" Height="40" Fill="#55000000" Stroke="#66000000" StrokeThickness="2" Canvas.Left="10" Canvas.Top="70"/>
                                <Ellipse x:Name="ShadowBody" Width="40" Height="40" Fill="#AAFFFFFF" Stroke="#66000000" StrokeThickness="2" Canvas.Left="45" Canvas.Top="45" RenderTransformOrigin="0.5,0.5">
                                    <Ellipse.RenderTransform>
                                        <TransformGroup>
                                            <SkewTransform x:Name="ShadowSkewTransform"/>
                                            <RotateTransform x:Name="ShadowYawTransform"/>
                                        </TransformGroup>
                                    </Ellipse.RenderTransform>
                                </Ellipse>
                                <Rectangle x:Name="ShadowHeading" Width="6" Height="32" RadiusX="2" RadiusY="2" Fill="#AA00CCFF" Stroke="#66000000" StrokeThickness="1" Canvas.Left="62" Canvas.Top="12" RenderTransformOrigin="0.5,1">
                                    <Rectangle.RenderTransform>
                                        <RotateTransform x:Name="ShadowHeadingRotate"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                            </Canvas>
                        </Grid>
                    </Border>

                    <!-- Loading Overlay -->
                    <Grid x:Name="LoadingOverlay" Background="#EE000000" Visibility="Visible">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock x:Name="lblInitTitle" Text="INITIALIZING MISSION" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="lblInitWait" Text="Waiting for Terrain Data..." Foreground="Gray" FontSize="14" Margin="0,5,0,20" HorizontalAlignment="Center"/>
                            <ProgressBar IsIndeterminate="True" Width="400" Height="6"/>
                            <TextBlock x:Name="txtStatus" Text="Initializing..." Foreground="#AAA" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Mission Planner Tab -->
            <TabItem Header="Mission Planner">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" CornerRadius="4">
                        <Grid x:Name="MapHost" MouseLeftButtonDown="MapHost_MouseLeftButtonDown" Background="Transparent">
                            <Image x:Name="MissionMapImage" Stretch="Fill"/>
                            <Canvas x:Name="MissionMapOverlay" IsHitTestVisible="False" />
                            <TextBlock x:Name="txtMapStatus" Text="Loading mission planner..." Foreground="White" Background="#AA000000" Padding="6" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Margin="15" Background="#1A1A1A" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Waypoint Editor" FontWeight="Bold" Foreground="White" FontSize="14" Margin="0,0,0,6"/>
                            <TextBlock Text="Latitude" Foreground="Gray" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtLat" Background="#222" Foreground="White" Margin="0,0,0,6"/>
                            <TextBlock Text="Longitude" Foreground="Gray" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtLon" Background="#222" Foreground="White" Margin="0,0,0,6"/>
                            <TextBlock Text="Altitude (m)" Foreground="Gray" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtAlt" Background="#222" Foreground="White" Margin="0,0,0,6"/>
                            <TextBlock Text="Heading (deg)" Foreground="Gray" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtHeading" Background="#222" Foreground="White" Margin="0,0,0,6"/>

                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Content="Add Waypoint" Click="BtnAddWaypoint_Click" Padding="6" Width="110" Margin="0,0,6,0"/>
                                <Button Content="Update" Click="BtnUpdateWaypoint_Click" Padding="6" Width="80" Margin="0,0,6,0"/>
                                <Button Content="Remove" Click="BtnRemoveWaypoint_Click" Padding="6" Width="80"/>
                            </StackPanel>

                            <ListBox x:Name="lstWaypoints" Height="200" SelectionChanged="LstWaypoints_SelectionChanged" Background="#111" Foreground="White" BorderBrush="#333" Margin="0,6,0,0"/>

                            <Separator Margin="0,8"/>
                            <TextBlock Text="Mission Name" Foreground="Gray" Margin="0,0,0,6"/>
                            <TextBox x:Name="txtMissionName" Background="#222" Foreground="White" Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Save Mission" Click="BtnSaveMission_Click" Padding="6" Width="110" Margin="0,0,6,0"/>
                                <Button Content="Clear" Click="BtnClearMission_Click" Padding="6" Width="70"/>
                            </StackPanel>

                            <Separator Margin="0,8"/>
                            <TextBlock Text="Saved Missions" Foreground="Gray" Margin="0,0,0,6"/>
                            <StackPanel Orientation="Horizontal">
                                <ComboBox x:Name="cmbSavedMissions" Width="180" Background="#222" Foreground="White" Margin="0,0,6,0"/>
                                <Button Content="Load" Click="BtnLoadMission_Click" Padding="6" Width="60"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <Border Margin="20" Background="#111" Padding="10">
                    <StackPanel>
                        <TextBlock Text="Settings" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock Text="Drone Model" Foreground="Gray" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <ComboBox x:Name="cmbDroneModels"
                                      Width="220"
                                      Background="#222"
                                      Foreground="White"
                                      SelectionChanged="CmbDroneModels_SelectionChanged"
                                      Margin="0,0,8,0"/>
                            <Button Content="Add .obj" Click="BtnAddDroneModel_Click" Padding="6" Width="90"/>
                        </StackPanel>
                        <TextBlock Text="Only .obj models are supported. Newly added files will be copied into the project folder."
                                   TextWrapping="Wrap"
                                   Foreground="#888"
                                   Margin="0,0,0,12"/>
                        <Button Content="Reload Application" Click="BtnReloadApp_Click" Padding="8" Width="180"/>
                    </StackPanel>
                </Border>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
