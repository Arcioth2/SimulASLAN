{
  "manifest_version": 3,
  "name": "SimulASLAN Helper",
  "version": "1.3",
  "permissions": [
    "storage",
    "clipboardWrite",
    "downloads"
  ],
  "host_permissions": [
    "https://www.google.com/maps/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/maps/*"],
      "js": ["content.js", "autocopy.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SimulASLAN Settings"
  }
}