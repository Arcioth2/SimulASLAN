{
  "manifest_version": 3,
  "name": "Map Label Remover",
  "version": "1.0",
  "description": "Automatically hides labels on Google Maps by injecting custom style code.",
  "content_scripts": [
    {
      "matches": [
        "*://*.google.com/maps/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
